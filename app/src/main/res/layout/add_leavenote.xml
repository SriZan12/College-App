<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sandYellow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/bevan"
                android:text="Add Leave Note"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autofillHints="" />

            <EditText
                android:id="@+id/student_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialogbox_stroke"
                android:minHeight="48dp"
                android:padding="8dp"
                android:hint="Name"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialogbox_stroke"
                android:minHeight="48dp"
                android:padding="8dp"
                android:hint="Class"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialogbox_stroke"
                android:minHeight="48dp"
                android:padding="8dp"
                android:inputType="number"
                android:hint="Contact Number"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:background="@drawable/dialogbox_stroke"
                android:hint="Reason"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:autofillHints="" />

            <EditText
                android:id="@+id/descriptionOfNote"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="@drawable/dialogbox_stroke"
                android:minHeight="48dp"
                android:padding="8dp"
                android:hint="Short Description of Note"
               android:gravity="start"
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/noteDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/done"
                android:background="@drawable/dialog_button_design"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
